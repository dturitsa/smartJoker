<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_view_joke"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dturi.smartjoker.ViewJokeActivity">

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/rateDownBut"
        android:onClick="rateJoke"
        android:id="@+id/rateDownBut"
        android:tag="rateDownBut"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="25dp" />

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/rateUpBut"
        android:onClick="rateJoke"
        android:id="@+id/rateUpBut"
        android:tag="rateUpBut"
        android:layout_alignBaseline="@+id/rateDownBut"
        android:layout_alignBottom="@+id/rateDownBut"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp" />

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/rateNeutralBut"
        android:onClick="rateJoke"
        android:id="@+id/rateNeutralBut"
        android:tag="rateNeutralBut"
        android:layout_alignBaseline="@+id/rateUpBut"
        android:layout_alignBottom="@+id/rateUpBut"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/jokeCreatorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Creator Text"
        android:layout_above="@+id/rateDownBut"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="54dp" />

    <TextView
        android:id="@+id/jokeRatingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rating Text"
        android:layout_above="@+id/jokeCreatorText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="23dp" />

    <TextView
        android:id="@+id/jokeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Joke Content Text"
        android:layout_marginTop="22dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/rateUpBut"
        android:layout_alignEnd="@+id/rateUpBut" />
</RelativeLayout>
